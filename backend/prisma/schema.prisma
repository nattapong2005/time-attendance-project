generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  STUDENT
  ADMIN
  TEACHER
}

enum AttendanceStatus {
  PRESENT
  ABSENT
  LATE
  LEAVE
}

enum LeaveType {
  SICK
  PERSONAL
}

enum LeaveStatus {
  PENDING
  APPROVED
  REJECTED
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String
  role      Role     @default(STUDENT)
  
  // Student fields
  studentId String?  
  departmentId Int?
  department   Department? @relation(fields: [departmentId], references: [id])
  
  sakaId       Int?
  saka         Saka?       @relation(fields: [sakaId], references: [id])
  
  supervisorId Int?
  supervisor   User?   @relation("TeacherStudents", fields: [supervisorId], references: [id])
  students     User[]  @relation("TeacherStudents") // For teachers
  
  attendances  Attendance[]
  leaveRequests LeaveRequest[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Department {
  id    Int    @id @default(autoincrement())
  name  String
  users User[]
}

model Saka {
  id        Int    @id @default(autoincrement())
  saka_name String
  users     User[]
}

model Attendance {
  id        Int      @id @default(autoincrement())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  date      DateTime @db.Date // Store just the date
  checkIn   DateTime?
  checkOut  DateTime?
  status    AttendanceStatus @default(PRESENT)
  isLate    Boolean @default(false)
  checkInPhoto String?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@unique([userId, date])
}

model LeaveRequest {
  id        Int      @id @default(autoincrement())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  startDate DateTime
  endDate   DateTime
  type      LeaveType
  reason    String?
  status    LeaveStatus @default(PENDING)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
